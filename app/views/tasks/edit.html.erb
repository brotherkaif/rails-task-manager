<div class="card">
  <div class="card-body">

    <h1>Edit Task</h1>

    <%= form_for @task do |f| %>
      <%= f.label :title %>:
      <%= f.text_field :title %><br />

      <%= f.label :details %>:
      <%= f.text_area :details %><br />

      <%= f.label :completed %>:
      <%= f.check_box :completed %><br />

      <%= f.submit %>
    <% end %>

  </div>
</div>