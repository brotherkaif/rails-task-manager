<div class="card">
  <div class="card-body">

    <h1>Create a task</h1>

    <%= form_for @task do |f| %>
      <div class="form-group">
        <%= f.label :title %>:
        <%= f.text_field :title, class: 'form-control' %><br />
      </div>

      <div class="form-group">
        <%= f.label :details %>:
        <%= f.text_area :details, class: 'form-control' %><br />
      </div>

      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
    <hr>
    <p><i class="fas fa-arrow-circle-left"></i> <%= link_to "back to tasks", tasks_path %>
  </div>
</div>